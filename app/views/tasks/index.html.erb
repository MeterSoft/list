<h1>Listing tasks</h1>

<table class='link'>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.description %></td>
      <td><%= task.category.name %></td>
      <td><%= link_to image_tag("srch_24.png"), task %></td>
      <td><%= link_to image_tag("tools_24.png"), edit_task_path(task) %></td>
      <td><%= link_to image_tag("trash_24.png"), task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<br />

