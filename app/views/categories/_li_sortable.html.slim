              = link_to image_tag("trash_24.png"), category, method: :delete, data: {confirm: 'Are you sure?'}, :remote => true

javascript:
    $(function() {
        $(".sortable").sortable({
            update: function(event, ui) {
                var str=$(this).sortable('serialize');
                $.ajax({
                    url: "#{categories_orders_path}",
                    data: str
                });
            }
        })
    });


