<h1>Listing categories</h1>

<table class="link">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @categories.each do |category| %>
    <tr>
      <td id="c"><%= link_to category.name, tasks_path(:category_id => category) %></td>
      <td><%= link_to image_tag("srch_24.png"), category %></td>
      <td><%= link_to image_tag("tools_24.png"), edit_category_path(category) %></td>
      <td><%= link_to image_tag("trash_24.png"), category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

