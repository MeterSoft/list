<tbody>
<% @categories.each_with_index do |category, index| %>
  <tr id="category_<%= category.id %>" class="sortable">
    <td><%= index + 1%></td>
    <td><%= link_to category.name, tasks_path(:category_id => category) %></td>
    <td class="v"><%= link_to image_tag("srch_24.png"), category %></td>
    <td class="v"><%= link_to image_tag("tools_24.png"), edit_category_path(category) %></td>
    <td class="v"><%= link_to image_tag("trash_24.png"), category, method: :delete, data: {confirm: 'Are you sure?'}, :remote => true %></td>
  </tr>
<% end %>
</tbody>

<script type="text/javascript">
  $('tr:odd').css("background-color", "#bbbbff");
</script>